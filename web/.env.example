# MCPeek Web Interface Environment Configuration

# API Configuration
MCPEEK_API_HOST=127.0.0.1
MCPEEK_API_PORT=8080

# CORS Configuration (comma-separated origins)
MCPEEK_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# Security Configuration
MCPEEK_TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# Rate Limiting Configuration
MCPEEK_RATE_LIMIT=60/minute

# Logging Configuration
MCPEEK_LOG_LEVEL=INFO
MCPEEK_ACCESS_LOG=true

# Development Settings
MCPEEK_DEBUG=false

# Production Settings
# MCPEEK_API_HOST=0.0.0.0
# MCPEEK_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# MCPEEK_TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com
# MCPEEK_RATE_LIMIT=30/minute
# MCPEEK_DEBUG=false
# MCPEEK_LOG_LEVEL=WARNING